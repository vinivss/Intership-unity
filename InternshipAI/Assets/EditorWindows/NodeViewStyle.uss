#node-border {
    background-color: rgb(56, 56, 56);
    border-left-color: rgb(47, 47, 47);
    border-right-color: rgb(47, 47, 47);
    border-top-color: rgb(47, 47, 47);
    border-bottom-color: rgb(47, 47, 47);
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
}

#input {
    align-items: center;
}

#output {
    align-items: center;
}

#selection-border {
    border-left-color: rgb(0, 19, 188);
    border-right-color: rgb(0, 19, 188);
    border-top-color: rgb(0, 19, 188);
    border-bottom-color: rgb(0, 19, 188);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

:hover > #selection-border {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
}

:selected > #selection-border {
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
}

:hover:selected > #selection-border {
    border-left-width: 3px;
    border-right-width: 3px;
    border-top-width: 3px;
    border-bottom-width: 3px;
}

.node {
    min-width: 150px;
    margin-left: 0;
    margin-right: 0;
    margin-top: 0;
    margin-bottom: 0;
}

#title {
    -unity-font-style: bold;
    font-size: 16px;
}

#divider {
    min-height: 1px;
    background-color: rgb(47, 47, 47);
}

.action #input {
    background-color: rgb(171, 27, 47);
}

.composite #input {
    background-color: rgb(130, 0, 87);
}

.decorator #input {
    background-color: rgb(45, 135, 55);
}

.root #input {
    background-color: rgb(154, 108, 0);
    min-height: 20px;
    height: auto;
    min-width: auto;
}

#node-state {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

.running #node-state {
    border-left-color: rgb(255, 252, 0);
    border-right-color: rgb(255, 252, 0);
    border-top-color: rgb(255, 252, 0);
    border-bottom-color: rgb(255, 252, 0);
}

.success #node-state {
    background-color: rgba(0, 255, 5, 0.61);
}

.fail #node-state {
    background-color: rgba(255, 0, 0, 0.75);
}

#description {
    white-space: normal;
    max-width: 150px;
}
